@model IEnumerable<_23_02_2025.Models.Department>



<p>
    <a asp-controller="Department" asp-action="Create">Add User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>FirstName</h3>
            </th>
            <th>
                <h3>LastName</h3>
            </th>
            <th>
                <h3>Email</h3>
            </th>
            <th>
                <h3>PhoneNumber</h3>
            </th>
        </tr>
    </thead>
   <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                 <button >
                        <a href="@Url.Action("Display", "Department", new { id= item.Id })">Display</a>
                 </button>
                    <form method="post" asp-action="Update" asp-controller="Department" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit">Update</button>
                    </form>


                 <form method="post" action="@Url.Action("Delete", "Department" )" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                 </form>

            </td>
        </tr>
        }
       
    </tbody>
